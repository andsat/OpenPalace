			public var user:PalaceUser;
		]]>
	</mx:Script>
	
	<mx:filters>
		<filters:GlowFilter color="#000000" alpha="1" blurX="2" blurY="2" quality="{BitmapFilterQuality.MEDIUM}" strength="5" />
	</mx:filters>
</mx:Label>
